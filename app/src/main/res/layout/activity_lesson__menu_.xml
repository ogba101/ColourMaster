<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="project.colormaster.Lesson_Menu_Activity">


    <Button
        android:id ="@+id/open_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="@string/profile_name"
        android:background="@drawable/profile_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/click_colour_instruction"
        android:text="@string/click_colour"
        android:fontFamily="sans-serif-condensed"
        android:textSize="27sp"
        android:layout_below="@id/open_profile"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id ="@+id/red_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/red_button"
        android:layout_below="@id/click_colour_instruction"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id ="@+id/orange_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/orange_button"
        android:layout_below="@id/click_colour_instruction"
        android:layout_toRightOf="@id/red_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:id ="@+id/yellow_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/yellow_button"
        android:layout_below="@id/click_colour_instruction"
        android:layout_toRightOf="@id/orange_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:id ="@+id/green_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/green_button"
        android:layout_below="@id/click_colour_instruction"
        android:layout_toRightOf="@id/yellow_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id ="@+id/blue_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/blue_button"
        android:layout_below="@id/red_button"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="47dp"
        />

    <Button
        android:id ="@+id/indigo_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/indigo_button"
        android:layout_below="@id/red_button"
        android:layout_toRightOf="@id/blue_button"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:id ="@+id/violet_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/violet_button"
        android:layout_below="@id/red_button"
        android:layout_toRightOf="@id/indigo_button"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:id ="@+id/white_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/white_button"
        android:layout_below="@id/blue_button"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="90dp"
        />

    <Button
        android:id ="@+id/black_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/black_button"
        android:layout_below="@id/blue_button"
        android:layout_toRightOf="@id/white_button"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        />
</RelativeLayout>
